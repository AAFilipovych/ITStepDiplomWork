<Window x:Class="adm.History_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adm"
        mc:Ignorable="d"
        Title="История продаж ювелирного магазина" Height="351.163" Width="855.04" Background="#FF77F012" ResizeMode="NoResize">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="234" Margin="10,42,0,0" VerticalAlignment="Top" Width="513" SelectionChanged="listBox_SelectionChanged"/>
        <Button x:Name="del_button" Content="Удалить одиночную запись о выбранной продаже из истории" HorizontalAlignment="Left" Margin="10,290,0,0" VerticalAlignment="Top" Width="513" Click="del_button_Click"/>
        <Button x:Name="clear_button" Content="Полная очистка базы данных от истории продаж" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="513" Click="clear_button_Click"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="300" Margin="538,10,0,0" VerticalAlignment="Top" Width="300"/>

    </Grid>
</Window>
