        <Label x:Name="label12" Content="Камни" HorizontalAlignment="Left" Margin="151,206,0,0" VerticalAlignment="Top"/>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="81" Margin="0,248,0,0" VerticalAlignment="Top" Width="143">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Label x:Name="label13" Content="Описание товара" HorizontalAlignment="Left" Margin="32,222,0,0" VerticalAlignment="Top" Width="111"/>
        <Button x:Name="refresh_button" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="12" RenderTransformOrigin="0.11,0.1" Click="refresh_button_Click" Height="12" Background="#FF88D419"/>
