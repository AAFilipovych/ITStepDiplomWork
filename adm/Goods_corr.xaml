        <Button x:Name="btn_foto4" Content="Загрузить фото4" HorizontalAlignment="Left" Height="24" Margin="442,305,-44,-74" VerticalAlignment="Top" Width="98" Click="btn_foto4_Click" Background="#FF4895CB"/>
