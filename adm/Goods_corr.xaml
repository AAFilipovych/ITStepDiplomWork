        <Image x:Name="Photo3" HorizontalAlignment="Left" Height="100" Margin="335,200,0,-45" VerticalAlignment="Top" Width="100"/>
        <Image x:Name="Photo4" HorizontalAlignment="Left" Height="100" Margin="442,200,-44,-45" VerticalAlignment="Top" Width="98"/>
